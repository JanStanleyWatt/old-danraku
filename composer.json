    "autoload": {
        "psr-4": {
            "Whojinn\\":"src/"
        }
      },
      
      "autoload-dev": {
        "psr-4": {
            "Whojinn\\Test\\":"test/"
        }
    },
    
    "suggest": {
        "whojinn/sapphire":"League/commonmark extension for japanese furigana."
